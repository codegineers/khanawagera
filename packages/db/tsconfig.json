{
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "**.*.js"
  ],
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
  },
}